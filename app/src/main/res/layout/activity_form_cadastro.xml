<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".FormCadastro">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCadastro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe seu email e senha \n para iniciar a assinatura"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:maxLines="2"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crie sua conta."
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:maxLines="2"

        />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColorHint="@color/cinza"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:strokeColor="@color/black"
        android:maxLines="1"
        app:strokeWidth="2dp"
        android:padding="20dp"
        android:background="@drawable/edit_text_cadastro"
        />

    <EditText
        android:id="@+id/edit_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:textColorHint="@color/cinza"
        android:hint="Senha"
        android:layout_marginTop="18dp"
        android:maxLines="1"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:strokeColor="@color/black"
        android:padding="20dp"
        app:strokeWidth="2dp"
        android:background="@drawable/edit_text_cadastro"
        />

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:text="cadastrar"
        android:backgroundTint="@color/redd"
        android:textAllCaps="true"
        android:textSize="18sp"
        />
    
    <TextView
        android:id="@+id/mensagem_erro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/redd"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"

        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginStart="325dp"
        android:layout_marginTop="238dp"
        app:srcCompat="@drawable/gyo2" />


</LinearLayout>